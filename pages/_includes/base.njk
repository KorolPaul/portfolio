<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ title }}</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="{{ '/style.css' | url }}">
    <link rel="shortcut icon" href="48x48px.ico">
    <link rel="icon" type="image/x-icon" href="48x48px.ico">
    <link rel="icon" type="image/png" href="16x16px.png" sizes="16x16">
    <link rel="icon" type="image/png" href="32x32px.png" sizes="32x32">
    <link rel="icon" type="image/png" href="48x48px.png" sizes="48x48">
    <meta content="telephone=no" name="format-detection">
    <meta name="HandheldFriendly" content="true">
</head>
<body>
    <header class="header">
        <nav class="menu">
            <a href="#about" class="menu_link">
                Обо мне
            </a>
            <a href="#resume" class="menu_link">
                Резюме
            </a>
            <a href="#projects" class="menu_link">
                Проекты
            </a>
            <a href="#articles" class="menu_link">
                Публикации
            </a>
        </nav>
    </header>

    <main>
        <div class="content">
            
            {{ content | safe }}

            <a name="resume"></a>
            <h3>Резюме</h3>
            <div class="works">
                {% for work in collections.works|sort(false, true, 'title') %}
                    <div class="work">
                        <a href="{{ work.data.url }}" class="work_title" target="__blank">{{ work.data.title }}</a>
                        <span class="work_date">{{ work.data.from }} - {{ work.data.to }}</span>
                        {{ work.data.content | safe }}
                    </div>
                {% endfor %}
            </div>

            <a name="projects"></a>
            <h3>Проекты</h3>
            <div class="projects">
            {% for project in collections.projects %}
                <div class="project">
                    <img class="project_image" src="src/img/projects/{{ project.data.thumb }}" alt="{{ project.data.title }}" />
                    <div class="project_content">
                        <a href="{{ project.url }}" class="project_title">{{ project.data.title }}</a>
                        <p class="project_description">
                            {{ project.data.description }}
                        </p>
                        <span class="project_tags">{{ project.data.features }}</span>
                        <div class="project_bottom">
                            <a href="{{ project.data.url }}" class="project_link" target="__blank"></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>

            <a name="articles"></a>
            <h3>Публикации</h3>

        </div>

    </main>

    <footer class="footer">
        <div class="footer_holder">
            <div class="footer_left">
                <p class="footer_copyrights">
                    © 2022 Pavel Korol
                </p>
                <a href="mailto:korol.paul@gmail.com">korol.paul@gmail.com</a>
            </div>
            <div class="footer_right">
                <div class="social">
                    <a target="__blank" href="https://www.linkedin.com/in/%D0%BF%D0%B0%D0%B2%D0%B5%D0%BB-%D0%BA%D0%BE%D1%80%D0%BE%D0%BB%D1%8C-352b466a/" class="social_link">
                        <img class="social_icon" src="src/img/social/ln.svg" alt="">
                    </a>
                    <a href="https://t.me/korolpaul" class="social_link">
                        <img class="social_icon" src="src/img/social/tg.svg" alt="">
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="./src/js/main.js"></script>
</body>
</html>
